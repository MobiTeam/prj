<h2 class="bold-text">{{ name }}</h2>
<h4 class="bold-text">Год набора {{ yearBegin }}-{{ yearEnd }}</h4>

{{ description }}

<h4 class="bold-text">Список дисциплин</h4>
<ul class="discipline-list">
	
	{{ #disciplines }}
	
	<li>
		<div class="item-main-content">
			<span class="item-title">{{ name }}</span>
			<span class="item-hours">{{ duration }} часа</span>
		</div>
		<span class="item-description">{{ description }}</span>
	</li>

	{{ /disciplines }}
	
</ul>

<!-- переписать -->
<input class="next-btn" type="button" onclick="$.uriAnchor.setAnchor({page: 'step2'})" value="Далее" />